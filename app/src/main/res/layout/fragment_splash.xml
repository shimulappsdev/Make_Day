<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SplashFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/logoCard"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:cardCornerRadius="@dimen/_17sdp"
        app:layout_constraintVertical_bias=".45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:src="@drawable/logo"
            android:padding="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="@font/charm_bold"
        android:text="Welcome to Make Day"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/_14ssp"
        android:includeFontPadding="false"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@id/logoCard"
        app:layout_constraintStart_toStartOf="@id/logoCard"
        app:layout_constraintTop_toBottomOf="@id/logoCard" />

</androidx.constraintlayout.widget.ConstraintLayout>